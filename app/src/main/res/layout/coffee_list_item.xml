<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/coffee_item_background"
                android:elevation="3dp"
                android:padding="20dp">

    <ImageView
        android:id="@+id/coffee_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cafe"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/coffee_photo">

        <TextView
            android:id="@+id/coffee_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Espresso"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/coffee_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coffee_name_text"
            android:layout_toLeftOf="@+id/arrow"
            android:text="Add a little kick to your coffee lorem ipsum dolores."
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=">"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coffee_description"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:src="@drawable/star"/>

            <TextView
                android:id="@+id/order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order for free!"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>